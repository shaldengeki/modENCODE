<%= hidden_field_tag "reagent[isoform_ids][]", nil %>
<% if isoforms.nil? or isoforms.empty? %>
  No isoforms found.
<% else %>
  <% isoforms.each do |isoform| %>
    <%= check_box_tag "reagent[isoform_ids][]", isoform.id, @reagent.isoform_ids.include?(isoform.id), :id => dom_id(isoform), :class => "isoform_checkbox"  %> <%= isoform.name %><br />
  <% end %>
<% end %>
