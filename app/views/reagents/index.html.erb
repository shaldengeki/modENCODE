<h1>Reagents</h1>

<table class='dataTable table table-striped table-bordered'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Isoform(s)</th>
      <th>Type</th>
      <th>Source</th>
    </tr>
  </thead>
  <tbody>
<% @reagents.each do |reagent| %>
    <tr>
      <td><%= link_to reagent.name, reagent %></td>
      <td><%= reagent.description %></td>
      <td><%= reagent.isoforms.nil? or reagent.isoforms.empty? ? "None" : raw(reagent.isoforms.map {|isoform| link_to(isoform.name, isoform) }.join(',')) %></td>
      <td><%= reagent.reagent_type.name %></td>
      <td><%= reagent.source.nil? ? "None" : link_to(reagent.source.name, reagent.source) %></td>
    </tr>
<% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Reagent', new_reagent_path %>
