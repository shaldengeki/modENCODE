<%= form_for @reagent, :html => { :class => "form-horizontal" } do |f| %>
  <% if @reagent.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@reagent.errors.count, "error") %> prohibited this reagent from being saved:</h2>
      <ul>
      <% @reagent.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
    <div class="control-group">
      <%= f.label :gene_name, :class => "control-label" %>
      <div class="controls">
        <%= autocomplete_field_tag 'Gene name', '', autocomplete_alias_name_aliases_path, :update_elements => { :transcription_factor_id => "#tf-id" }, :class => "search-query span2", :placeholder => "Search" %>
        <input type="hidden" id="tf-id" />
        <script type="text/javascript">
          <%= render :partial => "watch_tf_load_isoforms", :formats => [:js] %>
        </script>
      </div>
    </div>
    <div id="isoform-list" class="control-group">
      <%= f.label :isoforms, :class => "control-label" %>
      <div class="controls">
        <%= render :partial => "show_isoform_checkboxes", :locals => {:isoforms => []} %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :name, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :description, :class => "control-label" %>
      <div class="controls">
        <%= f.text_field :description %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :source_id, :class => "control-label" %>
      <div class="controls">
        <%= f.collection_select :source_id, Source.all, :id, :name %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :reagent_type_id, :class => "control-label" %>
      <div class="controls">
        <%= f.collection_select :reagent_type_id, ReagentType.all, :id, :name %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :tag_id, :class => "control-label" %>
      <div class="controls">
        <%= f.collection_select :tag_id, Tag.all, :id, :name %>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit "Create Reagent", :id => "create_reagent", :class => "btn btn-primary" %>
    </div>
  </fieldset>
<% end %>
