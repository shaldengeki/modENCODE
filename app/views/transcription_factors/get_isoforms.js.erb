$('#isoform-list > div.controls').html("<%= escape_javascript(render(:partial => 'reagents/show_isoform_checkboxes', :locals => {:isoforms => @transcription_factor.isoforms})) %>");
$('.isoform_checkbox').each(function() {
  $(this).click(function() {
    var isoforms = [];
    $(".isoform_checkbox:checked").each(function() {
      isoforms.push($(this).val());
    });
    $("input[name=isoforms_json]").val(JSON.stringify(isoforms));
    $("input[name=isoforms_json]").trigger('change');
  });
});