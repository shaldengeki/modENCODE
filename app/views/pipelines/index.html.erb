<h1>Listing pipelines</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Source</th>
    <th>Reagent type</th>
    <th>Steps</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pipelines.each do |pipeline| %>
  <tr>
    <td><%= pipeline.name %></td>
    <td><%= pipeline.description %></td>
    <td><%= pipeline.source.nil? ? "None" : pipeline.source.name %></td>
    <td><%= pipeline.reagent_type.nil? ? "None" : pipeline.reagent_type.name %></td>
    <td><%= pipeline.steps.nil? ? "0" : pipeline.steps.count %></td>
    <td><%= link_to 'Show', pipeline %></td>
    <td><%= link_to 'Edit', edit_pipeline_path(pipeline) %></td>
    <td><%= link_to 'Destroy', pipeline, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

