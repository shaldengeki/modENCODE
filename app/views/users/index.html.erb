<h1>Users</h1>

<table class="table table-bordered table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Role</th>
    <th>Source</th>
  </tr>
  </thead>
  <tbody>
<% @users.each do |user| %>
  <tr>
    <td><%= link_to user.name, user %></td>
    <td><%= user.email %></td>
    <td><%= user.role.humanize %></td>
    <td><%= user.source.nil? ? "None" : user.source.name %></td>
  </tr>
<% end %>
  </tbody>
</table>

<br />

<%= link_to 'New User', new_user_path %>
