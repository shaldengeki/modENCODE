<h1>Reagent Values</h1>

<table class='dataTable table table-striped table-bordered'>
  <thead>
    <tr>
      <th>Reagent</th>
      <th>Reagent attribute</th>
      <th>Value</th>
    </tr>
  </thead>
  <tbody>
<% @reagent_values.each do |reagent_value| %>
    <tr>
      <td><%= reagent_value.reagent.nil? ? "None" : reagent_value.reagent.name %></td>
      <td><%= reagent_value.reagent_attribute.nil? ? "None" : reagent_value.reagent_attribute.name %></td>
      <td><%= reagent_value.value %></td>
    </tr>
<% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Reagent value', new_reagent_value_path %>
