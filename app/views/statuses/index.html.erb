<h1>Listing statuses</h1>

<table>
  <tr>
    <th>Status</th>
    <th>Reagent</th>
    <th>Start</th>
    <th>End</th>
    <th>Position</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @statuses.each do |status| %>
  <tr>
    <td><%= status.description %></td>
    <td><%= status.attempt.nil? ? "None" : status.attempt.reagent.name %></td>
    <td><%= status.start %></td>
    <td><%= status.end %></td>
    <td><%= status.position %></td>
    <td><%= link_to 'Show', status %></td>
    <td><%= link_to 'Edit', edit_status_path(status) %></td>
    <td><%= link_to 'Destroy', status, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

